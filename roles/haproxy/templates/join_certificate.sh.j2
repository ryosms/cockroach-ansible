#!/usr/bin/env bash

# Create directory
mkdir -p /etc/ssl/{{ host_settings.host_name }}

cat /etc/letsencrypt/live/{{ host_settings.host_name }}/fullchain.pem \
    /etc/letsencrypt/live/{{ host_settings.host_name }}/privkey.pem \
    > /etc/ssh/{{ host_settings.host_name }}/{{ host_settings.host_name }}.pem
